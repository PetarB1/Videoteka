@model dynamic
@{
    ViewBag.Title = "NewRentalForm";
}

<h2>Nova pozajmica</h2>



<form id="newRental">
    <div class="form-group">
        <label>Kupac</label>
        <div class="tt-container">
            <input id="customer" type="text" value="" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label>Film</label>
        <div class="tt-container">
            <input id="movie" type="text" value="" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group" ></ul>

        </div>
    </div>


    <button class="btn btn-primary">Sačuvaj</button>

</form>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {

            var vm = {
                movieIds: []
            };

            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('Ime'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/kupci?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                minLength: 3,
                highlight: true

            }, {
                name: 'customers',
                display: 'Ime',
                source: customers
            }).on("typeahead:select", function (e, customer) {
                vm.customerId = customer.id;
            });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('Ime'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/filmovi?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#movie').typeahead({
                minLength: 3,
                highlight: true
            }, {
                name: 'movies',
                display: 'Ime',
                source: movies
            }).on("typeahead:select", function (e, movie) {
                $("#movies").append("<li class='list-group-item'>" + movie.Ime + "</li>");

                $("#movie").typeahead("val", "");

                vm.movieIds.push(movie.id);
            });
            $("#newRental").submit(function(e) {
                e.preventDefault();

                $.ajax({
                    url: "/api/Rentals",
                    method: "post",
                    data: vm

                    })
                    .done(function () {
                        toastr.succes("Uspjesno ste napravili pozajmicu");
                    })
                    .fail(function () {
                        toastr.error("Nesto neocekivano se desilo");
                    });
            });
        });
    </script>    
}